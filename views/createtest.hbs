<div
  class="pb-5 pt-5 text-white-50 text-center"
  style="background-color: slategrey;"
>
  <h1>
    CREATE OR EDIT A QUIZ
    <i class="fa-solid fa-gear"></i>
  </h1>
  <p>
    enter your test name to edit its questions
  </p>
</div>

<div class="maincolor">
  <div class="container">
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6 pt-5 pb-5">
        {{#if condition}}
          <div class="alert alert-success">
            <p>
              the quiz is created successfuly , this is your Quiz's ID ,save it!
              <i class="fa-regular fa-floppy-disk"></i>
            </p>
            <form action="/edittest" method="get">
              <input type="txet" class="form-control" name="id" value={{id}} />
              <div class="text-center pt-2">
                <button type="submit" class="btn btn-primary">GO to edit it
                  <i class="fa-solid fa-eye-dropper"></i>
                </button>
              </div>
            </form>
          </div>
        {{else}}
          {{#each msg}}
            <div class="alert alert-danger">{{this}}<i
                class="fa-solid fa-triangle-exclamation"
              ></i></div>
          {{/each}}
          <form action="/createtest" method="get">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">
                  Enter quiz's name :
                </h5>
                <p class="card-text">
                  <input
                    class="form-control"
                    placeholder="name ..."
                    name="name"
                  />
                </p>
              </div>
              <center>
                <button type="submit" class="btn btn-primary">submit
                </button>
                <div class="alert alert-warning mt-3">if you have created it
                  already use its ID
                  <i class="fa-solid fa-triangle-exclamation"></i>
                </div>
              </center>
              <br />
            </div>
          </form>
        {{/if}}
      </div>
    </div>
  </div>
</div>